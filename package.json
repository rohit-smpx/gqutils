{
  "name": "gqutils",
  "version": "1.2.0",
  "description": "Utilities For GraphQL",
  "main": "dist/index.js",
  "repository": "smartprix/gqutils",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint && npm run test-only",
    "check-coverage": "true",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test-only": "mocha test/*.test.js",
    "build": "rm -rf dist && babel src --out-dir dist",
    "-precommit": "npm run build && npm test && npm run check-coverage",
    "prepublishOnly": "npm run build"
  },
  "types": "index.d.ts",
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^10.12.18",
    "graphql-custom-types": "^1.5.0",
    "graphql-type-json": "^0.2.1",
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "graphql": "*",
    "graphql-subscriptions": "*",
    "graphql-tools": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-smartprix": "^3.5.3",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tools": "^4.0.3",
    "mocha": "^5.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs",
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "sourceMaps": true
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {
      "vue/script-indent": 0
    }
  }
}
